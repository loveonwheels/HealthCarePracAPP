        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorAlertDialogListItem">@android:color/black</item>
        <item name="android:textAppearanceMedium">@style/TextAppearance.Sphinx.Medium</item>
        <item name="android:borderlessButtonStyle">@style/Widget.Sphinx.Button.Borderless.Small</item>
        <item name="android:buttonBarStyle">@style/Sphinx.ButtonBar.AlertDialog</item>
    </style>

