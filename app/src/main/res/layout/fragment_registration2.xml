
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Certification Body"
            android:id="@+id/textView5"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:focusable="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/buttons_layout"
            android:layout_below="@+id/textView5"
            android:id="@+id/scrollView">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                >

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_reg_body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/input_reg_body_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Registration Body (if available)" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_reg_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/input_reg_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        android:hint="Registration Number (if available)" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_nric"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/input_nric"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="APC Number (if available)" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_prac_tyoe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/input_prac_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:editable="false"
                        android:hint="Practitioner Type " />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_renew_per"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/input_ren_per"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:editable="false"
                        android:hint="Renewal Period (if available)" />
                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_expiration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/input_exp_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:editable="false"
                        android:hint="Expiration Date (if available)" />
                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_language"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/input_language"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:editable="false"
                        android:hint="Language" />
                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="35dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Employment History"
                    android:drawablePadding="10dp"

                    android:drawableStart="@drawable/ic_my_library_books_24dp"

                    android:id="@+id/textView14"
                    android:clickable="true"
                    android:layout_column="0"
                    android:singleLine="true"
                    android:textColor="#070707"
                    android:layout_below="@+id/editText5"
                    android:layout_alignRight="@+id/editText6"
                    android:layout_alignEnd="@+id/editText6"
                    android:background="@drawable/edittext_state"
                    android:layout_marginTop="5dp"
                    android:paddingLeft="10dp"
                    android:gravity="center" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="35dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Educational Background"
                    android:drawablePadding="10dp"

                    android:drawableStart="@drawable/ic_my_library_books_24dp"

                    android:id="@+id/textView12"
                    android:clickable="true"
                    android:layout_column="0"
                    android:singleLine="true"
                    android:textColor="#070707"
                    android:layout_below="@+id/editText5"
                    android:layout_alignRight="@+id/editText6"
                    android:layout_alignEnd="@+id/editText6"
                    android:background="@drawable/edittext_state"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:layout_marginBottom="20dp"
                    android:paddingLeft="10dp" />

            </LinearLayout>
        </ScrollView>


    </RelativeLayout>




</android.support.design.widget.CoordinatorLayout>