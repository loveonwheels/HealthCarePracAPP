<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/mainlayb"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout2">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_emp_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/input_emp_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textColor="@drawable/edit_text_selector"
                    android:hint="Employer's name" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_emp_start_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/input_emp_start_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:inputType="none"
                    android:editable="false"
                    android:textColor="@drawable/edit_text_selector"
                    android:hint="Start Date" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_emp_to_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/input_emp_to_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:inputType="none"
                    android:editable="false"
                    android:text="Present "
                    android:textColor="@drawable/edit_text_selector"
                    android:hint="To Date" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_pos_held"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/input_emp_position"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textColor="@drawable/edit_text_selector"
                    android:hint="Position held" />
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*"
            android:id="@+id/tableLayout4"
            android:visibility="visible"
            android:layout_below="@+id/linearLayout2">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@+id/button18"
                android:visibility="visible" >

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ok"
                    android:id="@+id/button17"
                    android:textColor="#ffffff"
                    android:drawableEnd="@drawable/ic_check_24dp"
                    android:background="@color/colorPrimary"
                    android:textAlignment="textStart"
                    android:layout_below="@+id/linearLayout"
                    android:layout_alignEnd="@+id/linearLayout"
                    android:paddingRight="10dp"
                    android:padding="10dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cancel"
                    android:id="@+id/button18"
                    android:textColor="#ffffff"
                    android:background="@color/colorPrimary"
                    android:layout_marginLeft="2dp"
                    android:drawableEnd="@drawable/ic_clear_24dp"
                    android:padding="10dp"
                    android:layout_marginRight="2dp"
                    android:textAlignment="textStart"
                    android:layout_alignTop="@+id/button17"
                    android:layout_toStartOf="@+id/button17" />
            </TableRow>
        </TableLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*"
            android:id="@+id/tableLayout5"
            android:visibility="gone"
            android:layout_below="@+id/linearLayout2"
            android:layout_alignBottom="@+id/tableLayout4">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@+id/btn_sch_cancel"
                android:visibility="visible" >

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Save"
                    android:id="@+id/button4b"
                    android:textColor="#ffffff"
                    android:background="#288659"
                    android:layout_marginLeft="2dp"
                    android:drawableEnd="@drawable/ic_save_24dp"
                    android:padding="10dp"
                    android:layout_marginRight="2dp"
                    android:textAlignment="textStart"
                    android:layout_alignTop="@+id/btn_sch_ok"
                    android:layout_toStartOf="@+id/btn_sch_ok" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cancel"
                    android:id="@+id/button5b"
                    android:textColor="#ffffff"
                    android:background="@color/colorPrimary"
                    android:layout_marginLeft="2dp"
                    android:drawableEnd="@drawable/ic_clear_24dp"
                    android:padding="10dp"
                    android:layout_marginRight="2dp"
                    android:textAlignment="textStart"
                    android:layout_alignTop="@+id/btn_sch_ok"
                    android:layout_toStartOf="@+id/btn_sch_ok"
                    android:visibility="visible" />
            </TableRow>
        </TableLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*"
            android:id="@+id/tableLayout6"
            android:visibility="gone"
            android:layout_alignBottom="@+id/tableLayout4"
            android:layout_below="@+id/linearLayout2">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@+id/btn_sch_cancel">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit"
                    android:id="@+id/button6b"
                    android:textColor="#ffffff"
                    android:background="#2851b0"
                    android:layout_marginLeft="2dp"
                    android:drawableEnd="@drawable/ic_event_note_24dp"
                    android:padding="10dp"
                    android:layout_marginRight="2dp"
                    android:textAlignment="textStart"
                    android:layout_alignTop="@+id/btn_sch_ok"
                    android:layout_toStartOf="@+id/btn_sch_ok" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delete"
                    android:id="@+id/button7b"
                    android:textColor="#ffffff"
                    android:background="#c13535"
                    android:layout_marginLeft="2dp"
                    android:drawableEnd="@drawable/ic_delete_24dp"
                    android:padding="10dp"
                    android:layout_marginRight="2dp"
                    android:textAlignment="textStart"
                    android:layout_alignTop="@+id/btn_sch_ok"
                    android:layout_toStartOf="@+id/btn_sch_ok" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Close"
                    android:id="@+id/button8b"
                    android:textColor="#ffffff"
                    android:background="@color/colorPrimary"
                    android:layout_marginLeft="2dp"
                    android:drawableEnd="@drawable/ic_clear_24dp"
                    android:padding="10dp"
                    android:layout_marginRight="2dp"
                    android:textAlignment="textStart"
                    android:layout_alignTop="@+id/btn_sch_ok"
                    android:layout_toStartOf="@+id/btn_sch_ok"
                    android:visibility="visible" />
            </TableRow>
        </TableLayout>


    </RelativeLayout>

</LinearLayout>