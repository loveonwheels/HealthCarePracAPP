<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.mSIHAT.hcp.fragements.Home"
    android:background="@drawable/background">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay"
            android:id="@+id/view2">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar12"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/colorPrimary"
                app:popupTheme="@style/AppTheme.PopupOverlay" >


            </android.support.v7.widget.Toolbar>


        </android.support.design.widget.AppBarLayout>

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView42" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="15dp">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="visible"
                        android:id="@+id/homedetails2"
                        android:layout_marginTop="35dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Next Appiontment"
                            android:id="@+id/textView462"
                            android:textColor="@color/colorPrimaryDark"
                            android:textStyle="bold"
                            android:layout_marginBottom="10dp" />

                        <TableLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/textView432"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:text="Patient&apos;s Name : "
                                    android:textStyle="bold"
                                    android:textAlignment="textEnd" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/txtClient2"
                                    android:textColor="#000000"
                                    android:text="Chan Lee"
                                    android:textIsSelectable="false"
                                    android:textAlignment="textStart" />
                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/textView112"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:text="Client&apos;s Name : "
                                    android:singleLine="true"
                                    android:textStyle="bold"
                                    android:textAlignment="textEnd" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/txtPatient2"
                                    android:textColor="#000000"
                                    android:text="Chan Lee"
                                    android:textAlignment="textStart" />

                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/textView32"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:text="Appointment Date : "
                                    android:singleLine="true"
                                    android:textStyle="bold"
                                    android:textAlignment="textEnd" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="~ mins"
                                    android:id="@+id/txtDate2"
                                    android:textStyle="bold"
                                    android:textColor="@color/colorPrimaryDark" />

                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/textView182"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:text="Appointment Time : "
                                    android:singleLine="true"
                                    android:textStyle="bold"
                                    android:textAlignment="textEnd" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="~ mins"
                                    android:id="@+id/txtTime2"
                                    android:textStyle="bold"
                                    android:textColor="@color/colorPrimaryDark" />

                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/textView292"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:text="Est Arrival time : "
                                    android:singleLine="true"
                                    android:textStyle="bold"
                                    android:textAlignment="textEnd" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="~"
                                    android:id="@+id/arrivaltime2"
                                    android:textStyle="bold"
                                    android:textColor="@color/colorPrimaryDark" />

                            </TableRow>

                        </TableLayout>

                        <TableLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:stretchColumns="*"
                            android:layout_marginTop="10dp">

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textAlignment="center"
                                android:gravity="center">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Est Distance : ~ km"
                                    android:id="@+id/txtDistance2"
                                    android:gravity="center"
                                    android:textStyle="bold"
                                    android:textColor="@color/colorPrimaryDark" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Est Travel time: ~ mins"
                                    android:id="@+id/txtTraveltime2"
                                    android:gravity="center"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:textStyle="bold" />
                            </TableRow>
                        </TableLayout>

                        <TableLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:stretchColumns="*"
                            android:layout_marginTop="10dp">

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_horizontal">

                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:layout_margin="2dp"
                                    android:background="@drawable/cell"
                                    android:padding="2dp"
                                    android:id="@+id/btn_call2"
                                    android:focusable="false">

                                    <ImageButton
                                        android:layout_width="50dp"
                                        android:layout_height="50dp"
                                        android:id="@+id/img_btn_call2"
                                        android:src="@drawable/ic_call_80dp"
                                        android:background="#00ffffff" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:drawablePadding="10dp"

                                        android:id="@+id/textView132"
                                        android:textAlignment="center"
                                        android:text="Make a call" />

                                </LinearLayout>

                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:layout_margin="2dp"
                                    android:background="@drawable/cell"
                                    android:padding="2dp"
                                    android:id="@+id/btn_nav2">

                                    <ImageButton
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:id="@+id/img_btn_nav2"
                                        android:src="@drawable/nearme"
                                        android:background="#00ffffff"
                                        android:layout_margin="5dp"
                                        android:scaleType="fitXY" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"

                                        android:text="Navigate to"
                                        android:id="@+id/textView152"
                                        android:textAlignment="center" />

                                </LinearLayout>

                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_horizontal">

                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:background="@drawable/cell"
                                    android:layout_margin="2dp"
                                    android:padding="2dp"
                                    android:id="@+id/btnDescription2">

                                    <ImageButton
                                        android:layout_width="50dp"
                                        android:layout_height="50dp"
                                        android:id="@+id/imageButton32"
                                        android:src="@drawable/ic_info_outline_50dp"
                                        android:background="#00ffffff" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:drawablePadding="10dp"
                                        android:id="@+id/textView162"
                                        android:textAlignment="center"
                                        android:text="Description" />
                                </LinearLayout>

                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="50dp"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:background="@drawable/cell"
                                    android:layout_margin="2dp"
                                    android:padding="2dp">

                                    <ImageButton
                                        android:layout_width="50dp"
                                        android:layout_height="50dp"
                                        android:id="@+id/imageButton42"
                                        android:src="@drawable/ic_highlight_remove_24dp"
                                        android:background="#00ffffff" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Cancel"
                                        android:id="@+id/textView172"
                                        android:textAlignment="center" />
                                </LinearLayout>
                            </TableRow>

                        </TableLayout>

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="No Appiontment"
                        android:id="@+id/txtnoapp2"
                        android:textColor="@color/colorPrimaryDark"
                        android:textStyle="bold"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:visibility="gone" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Appointment Report"
                        android:id="@+id/textView202"
                        android:textColor="@color/colorPrimaryDark"
                        android:textStyle="bold"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="40dp" />

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="5dp"
                        android:stretchColumns="0"
                        android:layout_margin="2dp">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/table_row_curve"
                            android:baselineAligned="true">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Appointments Due Payment Total"
                                android:id="@+id/textView26"
                                android:padding="10dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:id="@+id/textView27"
                                android:padding="10dp" />

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/table_row_curve"
                            android:layout_marginTop="5dp" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Appointments Pending"
                                android:id="@+id/textView44"
                                android:padding="10dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:id="@+id/textView45"
                                android:padding="10dp" />
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/table_row_curve"
                            android:layout_marginTop="5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Appointments Completed"
                                android:id="@+id/textView21"
                                android:padding="10dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:id="@+id/textView22"
                                android:padding="10dp" />
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/table_row_curve"
                            android:layout_marginTop="5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Appointments Cancelled"
                                android:id="@+id/textView23"
                                android:padding="10dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:id="@+id/textView25"
                                android:padding="10dp" />
                        </TableRow>

                    </TableLayout>

                </LinearLayout>
            </RelativeLayout>
        </ScrollView>

    </LinearLayout>

</FrameLayout>
