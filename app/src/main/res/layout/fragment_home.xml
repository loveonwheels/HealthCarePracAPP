                        android:layout_marginLeft="15dp" />

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="08:00 am"
                        android:id="@+id/textView59"
                        android:textColor="#585656" />

                    <LinearLayout
