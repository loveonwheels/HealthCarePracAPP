<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    android:installLocation="auto"
    package="com.lovecareworks.healthcarepersonnel">

    <!-- To access Google+ APIs: -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="com.example.loveonewheels.googletry3.permission.MAPS_RECEIVE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>

    <application
        android:name="android.support.multidex.MultiDexApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.lovecareworks.healthcarepersonnel.MainActivity" android:screenOrientation="portrait"></activity>
        <activity
            android:name="com.lovecareworks.healthcarepersonnel.RegistrationActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name="com.lovecareworks.healthcarepersonnel.Main2Activity"
            android:label="@string/title_activity_main2"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.lovecareworks.healthcarepersonnel.Central"
            android:label="@string/title_activity_central" />

        <!-- Declaring Service in Manifest -->
        <service
            android:name="com.lovecareworks.healthcarepersonnel.Service.RequestService"
            android:exported="false" />
        <!-- Declaring Service in Manifest -->
        <service
            android:name="com.lovecareworks.healthcarepersonnel.Service.LocationService"
            android:exported="false" />

        <activity android:name="com.lovecareworks.healthcarepersonnel.FirstPage"
           >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.lovecareworks.healthcarepersonnel.secondaryactivity.set_schedule"></activity>

        <receiver android:name=".Central$MyReceiver" >
            <action android:name="UpdateLocation"/>
        </receiver>

        <service
            android:name=".Notification.FireIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT"/>
            </intent-filter>
        </service>

        <service
            android:name=".Notification.FireMsgService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>

    </application>

</manifest>